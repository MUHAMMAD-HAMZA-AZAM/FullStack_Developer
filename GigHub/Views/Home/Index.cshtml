@model GigHub.ViewModels.GigViewModel
    
    <ul class="gigs">

        @foreach (var gig in Model.GigsList)
        {
            
            <li>

                <div class="date">
                    <div class="month">
                        @gig.DateTime.ToString("MMM")
                    </div>
                    <div class="day">
                        @gig.DateTime.ToString("d ")
                    </div>
                </div>

                <div class="details">
                    <div class="artist">

                        @gig.Artist.Name

                    </div>
                    <div class="genre">

                        @gig.Genre.Name

                    </div>
                </div>
            </li>
        }
    </ul>

